---
app_name: <%= vm_name %>
server_name: <%= server_name %>
ruby_version: <%= ruby_version %>

user_name: vagrant
group_name: vagrant

<% if databases.include? 'postgresql' -%>
postgresql_db_name: <%= postgresql_db_name %>
postgresql_db_user: <%= postgresql_db_user %>
postgresql_db_password: <%= postgresql_db_password %>
<% end %>

<% if databases.include? 'mysql' -%>
mysql_db_name: <%= mysql_db_name %>
mysql_db_user: <%= mysql_db_user %>
mysql_db_password: <%= mysql_db_password %>
<% end %>

ssl_certificate_path: /etc/nginx/ssl/<%= server_name %>.crt
ssl_certificate_key_path: /etc/nginx/ssl/<%= server_name %>.key

app_path: /vagrant
app_public_path: "{{ app_path }}/public"
app_config_path: "{{ app_path }}/config"
app_temp_path: "{{ app_path }}/tmp"
app_logs_path: "{{ app_path }}/log"

unicorn_sock_path: "/tmp/unicorn.development.sock"
unicorn_config_path: "{{ app_config_path }}/unicorn.development.rb"
unicorn_pid_path: "{{ app_temp_path }}/unicorn.development.pid"
unicorn_stderr_path: "{{ app_logs_path }}/unicorn.err.log"
unicorn_stdout_path: "{{ app_logs_path }}/unicorn.log"
